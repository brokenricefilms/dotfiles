#!/usr/bin/env bash

export PATH=$PATH:$HOME/dotfiles/bin

if hash yay 2>/dev/null; then
  setup_arch_package
fi

if hash yay 2>/dev/null; then
  setup_fedora_package
fi

if hash apt 2>/dev/null; then
  setup_debian_package
fi

setup_go_package
setup_npm
setup_obs
setup_tmux
setup_syncthing
setup_font
symlink_dotfiles
