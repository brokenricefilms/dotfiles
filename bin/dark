#! /usr/bin/env sh

echo "set background=dark
colorscheme zenwritten
highlight markdownH1 guifg=#2C363C guibg=NONE guisp=NONE gui=bold
" >~/dotfiles/nvim/themeControl.vim

echo "include ./dark_theme.conf" >~/dotfiles/kitty/theme.conf

cp ~/dotfiles/alacritty/dark_theme.yml ~/dotfiles/alacritty/alacritty.yml
cp ~/dotfiles/foot/dark.ini ~/dotfiles/foot/foot.ini

mkdir ~/dotfiles/bat/
echo "--theme=\"base16\"" >~/dotfiles/bat/config
