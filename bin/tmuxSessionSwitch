#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  SELECTED=$1
else
  SELECTED=$(fd . ~/repos/thuanowa ~/repos/OngDev/ ~/repos/nghiavuquansu/ ~/repos/legrandfr/ $HOME ~/app/ --hidden --max-depth 1 --type directory | fzf --preview $'echo {} | tr -d \'()\' | awk \'{printf "%s ",  $2} {print  $1}\' | xargs -r exa --icons --color=never' &)
fi

if [[ $SELECTED = "" ]]; then
  exit 0
fi

SELECTED_NAME=$(basename "$SELECTED" | tr . _)
TMUX_RUNNING=$(pgrep tmux)

if [[ $TMUX = "" ]] && [[ $TMUX_RUNNING = "" ]]; then
  tmux new-session -s $SELECTED_NAME -c $SELECTED
  exit 0
fi

if ! tmux has-session -t=$SELECTED_NAME; then
  tmux new-session -ds $SELECTED_NAME -c $SELECTED
fi

tmux switch-client -t $SELECTED_NAME
