#! /usr/bin/env sh

if [ -f $1 ]; then
  if hash cowsay 2>/dev/null; then
    cowsay "ðŸ‘‹Hey, I will run $1 for you."
    cowsay "Result"
  else
    echo "ðŸ‘‹Hey, I will run $1 for you."
    echo "=========="
    echo "==Result=="
    echo "=========="
  fi
  echo ""
  case $1 in
  *.cpp)
    g++ $1
    ./a.out
    rm a.out
    ;;
  *.c)
    gcc $1
    ./a.out
    rm a.out
    ;;
  *.html) brave-browser --new-window $1 ;;
  *.js) node $1 ;;
  *.ts) deno $1 ;;
  *.py) python $1 ;;
  *.go) go run $1 ;;
  *.sh)
    chmod +x $1
    ./$1
    ;;
  *) if hash cowsay 2>/dev/null; then
    cowthink -d "I guess, you don't type right the file name. ðŸ¤£ Try again."
  else
    echo "I guess, you don't type right the file name. ðŸ¤£ Try again."
  fi ;;
  esac
fi
