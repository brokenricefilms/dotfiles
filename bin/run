#! /usr/bin/env sh

if [ -f $1 ]; then
    cowsay "run $1"
    echo "====Result===="
    echo ""
    case $1 in
        *.cpp) g++ $1 ; ./a.out ; rm a.out ;;
        *.c) gcc $1 ; ./a.out ; rm a.out ;;
        *.html) brave-browser --new-window $1 ;;
        *.js) node $1 ;;
        *.py) python $1 ;;
        *.go) go run $1 ;;
        *.sh) chmod +x $1 ; ./$1;;
        *) cowsay "oh no, how I can run it?"
    esac
else
    cowsay "'$1' is not a valid file"
fi
