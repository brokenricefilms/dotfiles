#!/usr/bin/env bash

if [ -z "$1" ]; then
  if [[ "$(pwd)" == "/home/master/repos/thuanowa/thuanowa.com" ]]; then
    pnpm install
    pnpm dev
  fi
else
  set -o errexit
  set -o nounset
  set -o pipefail

  file_name=$1
  file_name_without_extension=$(echo "$file_name" | cut -f 1 -d '.')

  if [ -f $file_name ]; then
    case $file_name in
    *.cpp)
      g++ $file_name
      ./a.out
      rm a.out
      ;;
    *.c)
      gcc $file_name
      ./a.out
      rm a.out
      ;;
    *.rs)
      rustc $file_name
      $file_name_without_extension
      rm $file_name_without_extension
      ;;
    *.html) google-chrome-stable --new-window $file_name ;;
    *.js) node $file_name ;;
    *.ts) deno $file_name ;;
    *.py) python $file_name ;;
    *.go) go run $file_name ;;
    *.cs)
      csc $file_name
      mono "${file_name_without_extension}.exe"
      rm -rf "${file_name_without_extension}.exe"
      ;;
    *.java)
      javac $file_name
      java $file_name_without_extension
      rm -rf "${file_name_without_extension}.class"
      ;;
    *.php) php $file_name ;;
    *.sh)
      chmod +x $file_name
      ./$file_name
      ;;
    *) if hash cowsay 2>/dev/null; then
      cowthink -d "I guess, you don't type right the file name. ðŸ¤£ Try again."
    else
      echo "I guess, you don't type right the file name. ðŸ¤£ Try again."
    fi ;;
    esac
  fi
fi
