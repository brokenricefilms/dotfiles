#!/usr/bin/env bash

npm config set prefix ~/.npm/

if hash pnpm 2>/dev/null; then
  pnpm install --global pnpm
  pnpm install --global prettier
  pnpm install --global tinypng-cli
  pnpm install --global browser-sync
  pnpm install --global neovim
  pnpm install --global typescript
  pnpm install --global ijavascript
else
  npm install --global pnpm
  npm_setup
fi
