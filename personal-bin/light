#! /usr/bin/env sh

echo "colorscheme github_light

highlight HopNextKey guifg=#24292f guibg=NONE guisp=NONE gui=bold cterm=bold
" >~/dotfiles/nvim/themeControl.vim

echo "include=~/dotfiles/foot/foot_light.ini" > ~/dotfiles/foot/themeControl.ini

DIRECTORY=~/dotfiles/bat

if [ -d "$DIRECTORY" ]; then
  mkdir $DIRECTORY
fi
echo "--theme=\"GitHub\"" >~/dotfiles/bat/config
