#! /usr/bin/env sh

echo "set background=dark
colorscheme zenbones
" >~/dotfiles/nvim/themeControl.vim

echo "include=~/dotfiles/foot/foot_dark.ini" > ~/dotfiles/foot/themeControl.ini

DIRECTORY=~/dotfiles/bat

if [ -d "$DIRECTORY" ]; then
  mkdir $DIRECTORY
fi
echo "--theme=\"base16\"" >~/dotfiles/bat/config
