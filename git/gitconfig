[alias]
a = !git commit --all --amend --no-edit
l = !git log --oneline --decorate --all --graph -n 10
i = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
st = "!git status -sb"
d = "!git diff"
ok = "!git_auto_commit() { git add --all; git commit -m '[ðŸ‘ŒAuto commit]'; git push; } ; git_auto_commit "
yo = "!git_commit_change() { git diff; echo -n 'ðŸ‘‰ Commmit message: '; read commit_message; git add --all; git commit -m \"$commit_message\"; git push ;} ; git_commit_change "
todo = "!git_auto_commit() { git add --all; git commit -m 'chore: TODO list'; git push; } ; git_auto_commit "

