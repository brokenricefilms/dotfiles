snippet kiemTraSoNguyenTo
    bool kiemTraSoNguyenTo(int number) {
      bool flag = false;
      int count = 0;

      if (number < 2 || number > 100) {
        flag = false;
      } else {
        for (int i = 2; i <= number / 2; i++) {
          if (number % i == 0) {
            count++;
          }
        }
        if (count == 0) {
          flag = true;
        }
      }
      return flag;
    }

